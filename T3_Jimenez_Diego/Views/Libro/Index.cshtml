@model IEnumerable<T3_Jimenez_Diego.Models.Libro>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Libros</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Libro" asp-action="Crear" class="btn btn-primary">Nuevo Libro</a>
        </div>
    </div>

    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Tema</th>
                    <th>Editorial</th>
                    <th>Año de Publicación</th>
                    <th>Páginas</th>
                    <th>Categoría</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th width="40%">@item.titulo</th>
                        <th width="40%">@item.autor</th>
                        <th width="40%">@item.tema</th>
                        <th width="40%">@item.editorial</th>
                        <th width="30%">@item.anioPublicacion</th>
                        <th width="20%">@item.paginas</th>
                        <th width="50%">@item.categoria</th>
                        <th>
                            <div class="w_75 btn_group" role="group">
                                <a asp-controller="Libro" asp-action="Editar" asp-route-Id="@item.ID" class="btn btn-primary mx-2">Editar</a>
                                <a asp-controller="Libro" asp-action="Eliminar" asp-route-Id="@item.ID" class="btn btn-danger mx-2">Eliminar</a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existen registros de Clientes</p>
    }
</div>